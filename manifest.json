{
  "name": "Codecool project checklist",
  "version": "1.1",
  "description": "A Codecool projekt oldalakon checkboxok elhelyezése a feladat kritérium felsorolásoknál.",
  "permissions": [
    "activeTab", 
    "declarativeContent", 
    "storage", 
    "tabs",
    "webNavigation",
    "notifications"
  ],
  "background": {
    "persistent": false,
    "scripts":["background.js"]
  }, 
  "content_scripts": [
    {
      "matches": [
        "https://journey.code.cool/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16":  "images/check16.png",
      "32":  "images/check32.png",
      "48":  "images/check48.png",
      "128": "images/check128.png"
    }
  },
  "icons": {
    "16":  "images/check16.png",
    "32":  "images/check32.png",
    "48":  "images/check48.png",
    "128": "images/check128.png"
  },
  "manifest_version": 2
}
