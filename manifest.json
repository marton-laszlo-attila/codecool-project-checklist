{
  "name": "Codecool project checklist",
  "version": "1.0",
  "description": "A Codecool projekt oldalakon checkboxok elhelyezése a feladat kritérium felsorolásoknál.",
  "permissions": [
    "activeTab", 
    "declarativeContent", 
    "storage", 
    "tabs",
    "webNavigation",
    "webRequest",
    "https://in.hotjar.com/*"
  ], 
  "content_scripts": [
    {
      "matches": [
        "https://journey.code.cool/*"
      ],
      "js": [
        "content.js",
        "jquery-3.5.1.min.js",
        "jquery.cookie.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "page_action": {
    "default_icon": {
      "16":  "images/check16.png",
      "32":  "images/check32.png",
      "48":  "images/check48.png",
      "128": "images/check128.png"
    }
  },
  "icons": {
    "16":  "images/check16.png",
    "32":  "images/check32.png",
    "48":  "images/check48.png",
    "128": "images/check128.png"
  },
  "manifest_version": 2,
  "background": {
    "persistent": true,
    "scripts":["background.js"]
  }
}
