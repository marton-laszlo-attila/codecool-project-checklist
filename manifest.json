{
  "name": "Codecool project checklist",
  "version": "1.0",
  "description": "A Codecool projekt oldalakon checkboxok elhelyezése a feladat kritérium felsorolásoknál.",
  "permissions": ["activeTab", "declarativeContent", "storage"], 
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-3.5.1.min.js",
        "jquery.cookie.js",
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "page_action": {
    "default_popup": "popup.html", 
    "default_icon": {
      "16":  "images/check16.png",
      "32":  "images/check32.png",
      "48":  "images/check48.png",
      "128": "images/check128.png"
    }
  },
  "icons": {
    "16":  "images/check16.png",
    "32":  "images/check32.png",
    "48":  "images/check48.png",
    "128": "images/check128.png"
  },
  "manifest_version": 2 
}
